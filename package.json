{
  "name": "node-ts-express-template",
  "version": "0.0.1",
  "author": "Ramirez Pineda Roy",
  "license": "MIT",
  "description": "Node Typescript Express Template",
  "main": "dist/main.js",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/main.js",
    "dev": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts",
    "lint": "eslint \"{src,tests}/**/*.ts\" ",
    "lint:fix": "eslint --fix \"{src,test}/**/*.ts\" ",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "compression": "1.7.5",
    "cors": "2.8.5",
    "express": "4.21.2",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "pg": "8.13.1",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.20",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@types/bcrypt": "5.0.2",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "9.0.7",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.12",
    "@types/node": "22.9.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "@vitest/coverage-v8": "2.1.4",
    "eslint": "9.17.0",
    "globals": "15.14.0",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.10",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.4"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "template",
    "typescript-template",
    "express-template"
  ]
}
